1.4
width = 5
height = 10
area = width * height  # Area = width * height
print(f"The area of the rectangle = {area}")

# Challenge: Perform arithmetic operations with two numbers
a = 20
b = 7
addition = a + b
print(f"The result of addition: {a} + {b} = {addition}")

subtraction = a - b
print(f"The result of subtraction: {a} - {b} = {subtraction}")

multiplication = a * b
print(f"The result of multiplication: {a} * {b} = {multiplication}")

division = a / b
print(f"The result of division: {a} / {b} = {division}")

modulo = a % b
print(f"The result of modulo: {a} % {b} = {modulo}")

1.5
favorite_foods = ["Pizza", "Burger", "meat", "chicken", "pasta"]

print("Favorite foods list:", favorite_foods)

print("The third item in the list is:", favorite_foods[2])

favorite_foods_tuple = tuple(favorite_foods)

try:
    favorite_foods_tuple[0] = "Tacos"  # Attempting to change the first item
except TypeError as e:
    print("Error:", e)

1.6
sentence = "Learning Python is fun!"

word = sentence[9:15]
print("Sliced word:", word)

new_sentence = sentence.replace("fun", "awesome")
print("Updated sentence:", new_sentence)

1.7
# Creating the dictionary
student = {
    "name": "hanaa",
    "age": 20,
    "grade": "A"
}
print("Original dictionary:", student)

student["city"] = "Giza"
print("Updated dictionary:", student)

1.8
num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))

print("Sum:", num1 + num2)
print("Difference:", num1 - num2)
print("Product:", num1 * num2)

if num2 != 0:
    print("Division:", num1 / num2)
else:
    print("Division: Cannot divide by zero")

if num2 != 0 and num1 % num2 == 0:
    print("Divisibility: Divisible")
else:
    print("Divisibility: Not Divisible")

